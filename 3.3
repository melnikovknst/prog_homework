#include <stdio.h>
#include <math.h>

int factorial(int digit) {
    if (digit == 0) {
        return 1;
    }
    else {
        return digit * factorial(digit - 1);
    }
}

int main(void) {
    int x, n;
    float sum = 0.0;
    scanf("%d %d", &x, &n);
    for (int i = 0; i < n; i++) {
        sum += (float)(pow(x, i) / factorial(i) * pow(-1, i));
    }
    printf("%f", sum);
    return 0;
}
